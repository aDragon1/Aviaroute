<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="2dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="2dp"
    android:padding="16dp"
    app:cardCornerRadius="8dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/flightNumberTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Номер рейса" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/departureTimeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дата вылета" />

            <TextView
                android:id="@+id/departureAirportTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Аэропорт вылета" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/destinationTimeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дата прилета" />

            <TextView
                android:id="@+id/destinationAirportTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Аэропорт прилета" />
        </LinearLayout>

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Цена билета" />
    </LinearLayout>
</androidx.cardview.widget.CardView>