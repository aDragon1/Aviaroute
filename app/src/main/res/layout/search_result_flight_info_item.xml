<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="8dp"
    android:padding="30dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/flightNumberTextView"
            style="@style/HeaderTextViewStyle"
            android:layout_gravity="center"
            android:text="Номер рейса" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:orientation="vertical">

            <TextView
                style="@style/HeaderTextViewStyle"
                android:text="Информация по вылету:"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/departureTimeTextView"
                style="@style/CommonTextViewStyle"
                android:layout_marginStart="15dp"
                android:text="Дата вылета" />

            <TextView
                android:id="@+id/departureAirportTextView"
                style="@style/CommonTextViewStyle"
                android:layout_marginStart="15dp"
                android:text="Аэропорт вылета" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="3dp"
            android:orientation="vertical">

            <TextView
                style="@style/HeaderTextViewStyle"
                android:text="Информация по прилету:" />

            <TextView
                android:id="@+id/destinationTimeTextView"
                style="@style/CommonTextViewStyle"
                android:layout_marginStart="15dp"
                android:text="Дата прилета" />

            <TextView
                android:id="@+id/destinationAirportTextView"
                style="@style/CommonTextViewStyle"
                android:layout_marginStart="15dp"
                android:text="Аэропорт прилета" />
        </LinearLayout>

        <TextView
            android:id="@+id/flightSummaryTextView"
            style="@style/CommonTextViewStyle"
            android:layout_width="match_parent"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:background="@drawable/underline_top_drawable"
            android:gravity="center"
            android:text="Цена билета , время в пути" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
