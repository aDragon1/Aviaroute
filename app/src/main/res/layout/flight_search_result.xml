<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/backImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:importantForAccessibility="no"
            android:src="@drawable/arrow_left_drawable" />

        <TextView
            android:id="@+id/flightSearchInfoCodesTextView"
            style="@style/CommonTextViewStyle" />

        <ImageButton
            android:id="@+id/sortImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:importantForAccessibility="no"
            android:src="@drawable/filter_drawable" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/flightSearchInfoDepartureTextView"
            style="@style/CommonTextViewStyle"
            android:gravity="center" />

        <TextView
            android:id="@+id/flightSearchInfoDestinationTextView"
            style="@style/CommonTextViewStyle"
            android:gravity="center" />

        <TextView
            android:id="@+id/flightSearchInfDateTextView"
            style="@style/CommonTextViewStyle"
            android:gravity="center" />

        <TextView
            android:id="@+id/flightSearchInfoFoundTextView"
            style="@style/CommonTextViewStyle"
            android:gravity="center" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/flightSearchResultRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp" />
</LinearLayout>
